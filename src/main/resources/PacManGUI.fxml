<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainAndControl.Controller">
   <children>
      <HBox fx:id="scoreBoard" alignment="TOP_RIGHT" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" prefWidth="540.0">
         <children>
            <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label contentDisplay="RIGHT" text="Time:" textFill="WHITE" />
                  <Label text="Score:" textFill="WHITE" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="timeLabel" textFill="WHITE" />
                  <Label fx:id="scoreLabel" text="0" textFill="WHITE" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Canvas fx:id="canvas" focusTraversable="true" height="440.0" onKeyPressed="#keyboardMovement" width="540.0" />
   </children>
</VBox>
